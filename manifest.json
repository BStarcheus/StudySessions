{
    "name": "Study Sessions",
    "version": "1.0",
    "description": "Track your study session. Highlight text to save quick notes.",
    "permissions": ["tabs", "activeTab", "declarativeContent", "storage", "<all_urls>", "notifications"],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "popup.html"
    },
    "web_accessible_resources": [
        "/imgs/*.png",
        "/pages/*"
    ],
    "manifest_version": 2
}
